<p id="notice"><%= notice %></p>

<h1>UserComponents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Authentication token</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user_component| %>
      <tr>
        <td><%= user_component.name %></td>
        <td><%= user_component.authentication_token %></td>
        <td><%= link_to 'Show', user_component %></td>
        <td><%= link_to 'Edit', edit_user_path(user_component) %></td>
        <td><%= link_to 'Destroy', user_component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

